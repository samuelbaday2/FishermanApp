<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FishermanApp.Views.Pages.EnterSetDetailPage"
             Shell.FlyoutBehavior="Disabled"
             xmlns:res="clr-namespace:FishermanApp.Resources.Localization"  
             Title="{x:Static res:AppResources.SetDetails}"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BackgroundColor="White"
             >

    <Grid>
        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">

            <VerticalStackLayout Padding="16">
                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.SetNumber}"/>

                    <Label
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="40"
                    Text="{Binding SetNumber}"/>
                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.LongLineLength}"/>


                    <Grid>
                        <Border 
                            StrokeThickness="4"
                            Stroke ="{StaticResource ButtonGreen}"
                            StrokeShape="RoundRectangle 10,10,10,10"
                            HeightRequest="80">


                            <Entry    
                                Completed="Entry_Completed"
                                ReturnType="Next"
                                Margin="8,0"
                                VerticalOptions="FillAndExpand"
                                Keyboard="Numeric"
                                TextColor="Black"
                                FontAttributes="Bold"
                                FontSize="40"
                                Text="{Binding LongLineLength}"
                                />

                        </Border>

                        <Label TextColor="Black" FontAttributes="Bold" FontSize="24" HorizontalOptions="End" WidthRequest="60" VerticalTextAlignment="Center" VerticalOptions="Center" Text="{Binding UoM}"/>
                    </Grid>
             

                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.NumberOfBaskets}"/>

                    <Border 
            StrokeThickness="4"
            Stroke ="{StaticResource ButtonGreen}"
            StrokeShape="RoundRectangle 10,10,10,10"
            HeightRequest="80">

                        <Entry
               ReturnType="Next"
                Margin="8,0"
                Keyboard="Numeric"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="40"
                Text="{Binding BasketCount}"
                />
                    </Border>

                </VerticalStackLayout>



                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.HooksPerBasket}"/>

                    <Border 
            StrokeThickness="4"
            Stroke ="{StaticResource ButtonGreen}"
            StrokeShape="RoundRectangle 10,10,10,10"
            HeightRequest="80">

                        <Entry
                Margin="8,0"
                ReturnType="Next"
                Keyboard="Numeric"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="40"
                Text="{Binding HooksPerBasket}"
                />
                    </Border>

                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.HookType}"/>

                    <Border 
            StrokeThickness="4"
            Stroke ="{StaticResource ButtonGreen}"
            StrokeShape="RoundRectangle 10,10,10,10"
            HeightRequest="80">

                        <Grid>
                            <Entry
                Margin="8,0"
               ReturnType="Next"
                    Keyboard="Text"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="40"
                    Text="{Binding HookType}"
                    Focused="HookTypeEntry_Focused"
                    />

                            <Image HorizontalOptions="End" HeightRequest="40" VerticalOptions="Center" Source="caret_down" Margin="0,0,16,0">
                                <Image.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource ButtonGreen}"/>
                                </Image.Behaviors>
                            </Image>
                        </Grid>

                    </Border>

                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
                    
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.GangionLength}"/>

                    <Grid>
                        <Border 
                            StrokeThickness="4"
                            Stroke ="{StaticResource ButtonGreen}"
                            StrokeShape="RoundRectangle 10,10,10,10"
                            HeightRequest="80"> 

                            <Entry
                                Completed="Entry_Completed"
                                Margin="8,0"
                                ReturnType="Next"
                                Keyboard="Numeric"
                                TextColor="Black"
                                FontAttributes="Bold"
                                FontSize="40"
                                Text="{Binding GangionLength}"
                                />

                        </Border>

                        <Label TextColor="Black" FontAttributes="Bold" FontSize="24" HorizontalOptions="End" WidthRequest="60" VerticalTextAlignment="Center" VerticalOptions="Center" Text="{Binding UoM}"/>
                    </Grid>
                   

                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
     
     TextColor="{StaticResource Primary}"
     FontAttributes="Bold"
     FontSize="30"
     Text="Min Depth"/>

                    <Grid>
                        <Border 
             StrokeThickness="4"
             Stroke ="{StaticResource ButtonGreen}"
             StrokeShape="RoundRectangle 10,10,10,10"
             HeightRequest="80">

                            <Entry
                 Completed="Entry_Completed"
                 Margin="8,0"
                 ReturnType="Next"
                 Keyboard="Numeric"
                 TextColor="Black"
                 FontAttributes="Bold"
                 FontSize="40"
                 Text="{Binding MinDepth}"
                 />

                        </Border>

                        <Label TextColor="Black" FontAttributes="Bold" FontSize="24" HorizontalOptions="End" WidthRequest="60" VerticalTextAlignment="Center" VerticalOptions="Center" Text="{Binding UoM}"/>
                    </Grid>


                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,0,0,8">
                    <Label

TextColor="{StaticResource Primary}"
FontAttributes="Bold"
FontSize="30"
Text="Max Depth"/>

                    <Grid>
                        <Border 
        StrokeThickness="4"
        Stroke ="{StaticResource ButtonGreen}"
        StrokeShape="RoundRectangle 10,10,10,10"
        HeightRequest="80">

                            <Entry
            Completed="Entry_Completed"
            Margin="8,0"
            ReturnType="Next"
            Keyboard="Numeric"
            TextColor="Black"
            FontAttributes="Bold"
            FontSize="40"
            Text="{Binding MaxDepth}"
            />

                        </Border>

                        <Label TextColor="Black" FontAttributes="Bold" FontSize="24" HorizontalOptions="End" WidthRequest="60" VerticalTextAlignment="Center" VerticalOptions="Center" Text="{Binding UoM}"/>
                    </Grid>


                </VerticalStackLayout>

                <VerticalStackLayout Margin="0,0,0,8">
                    <Label
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.BaitSpecie}"/>


                    <Border 
            StrokeThickness="4"
            Stroke ="{StaticResource ButtonGreen}"
            StrokeShape="RoundRectangle 10,10,10,10"
            HeightRequest="80">

                        <Grid>
                            <Entry
                    Margin="8,0"
                    Keyboard="Numeric"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="40"
                    Text="{Binding BaitSpecie}"
                    Focused="BaitSpeciesEntry_Focused"
                    />

                            <Image HorizontalOptions="End" HeightRequest="40" VerticalOptions="Center" Source="caret_down" Margin="0,0,16,0">
                                <Image.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource ButtonGreen}"/>
                                </Image.Behaviors>
                            </Image>
                        </Grid>

                    </Border>

                    <VerticalStackLayout Margin="0,0,0,8">
                        <Label
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="{x:Static res:AppResources.BaitType}"/>

                        <Grid
                    Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>

                            <Border 
                        StrokeShape="RoundRectangle 10,10,10,10"
                        Grid.Column="0">

                                <Button 
                            BackgroundColor="LightGray"
                            FontSize="30"
                            TextColor="{StaticResource Tertiary}"
                            Text="{x:Static res:AppResources.Live}"
                            Command="{Binding LiveButtonCommand}">

                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                Binding="{Binding LiveBait}" 
                                
                                Value="True">
                                            <Setter Property="BackgroundColor"
                                Value="{StaticResource ButtonGreen}" />
                                            <Setter Property="TextColor"
                                Value="White" />

                                        </DataTrigger>
                                        <DataTrigger TargetType="Button"
                                 Binding="{Binding DeadBait}" 
                                Value="True">
                                            <Setter Property="BackgroundColor"
                                Value="LightGray" />
                                            <Setter Property="TextColor"
                                Value="{StaticResource Tertiary}" />

                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Border>

                            <Border 
                        StrokeShape="RoundRectangle 10,10,10,10"
                        Grid.Column="1">

                                <Button 
                            BackgroundColor="LightGray"
                            FontSize="30"
                            Grid.Column="1"
                            TextColor="{StaticResource Tertiary}"
                            Text="{x:Static res:AppResources.Dead}"
                            Command="{Binding DeadButtonCommand}">

                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                Binding="{Binding DeadBait}" 
                                
                                Value="True">
                                            <Setter Property="BackgroundColor"
                                Value="{StaticResource ButtonRed}" />
                                            <Setter Property="TextColor"
                                Value="White" />

                                        </DataTrigger>
                                        <DataTrigger TargetType="Button"
                                 Binding="{Binding LiveBait}" 
                                Value="True">
                                            <Setter Property="BackgroundColor"
                                Value="LightGray" />
                                            <Setter Property="TextColor"
                                Value="{StaticResource Tertiary}" />

                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>
                            </Border>

                        </Grid>


                    </VerticalStackLayout>
                </VerticalStackLayout>

                <Button 
                    Margin="0,32,0,0"
                    Grid.Row="1"
                    Command="{Binding BackToHomeCommand}"
                    Text="{x:Static res:AppResources.BackToHome}"
                    TextColor="White"
                    BackgroundColor="{StaticResource ButtonOrange}"
                    HeightRequest="65"
                    FontSize="30"

                    VerticalOptions="End"/>

                <Button 
                    Margin="0,16,0,32"
                    Grid.Row="1"
                    Command="{Binding EndSetCommand}"
                    Text="{x:Static res:AppResources.EndSet}"
                    TextColor="White"
                    BackgroundColor="{StaticResource ButtonRed}"
                    HeightRequest="65"
                    FontSize="30"
        
                    VerticalOptions="End"/> 
            </VerticalStackLayout>

        </ScrollView>

        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="#33333354">
            <Border
                Opacity="1"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                StrokeThickness="10"
                BackgroundColor="White"
                Stroke="{StaticResource ButtonDarkBlue}"
                StrokeShape="RoundRectangle 10,10,10,10"
                WidthRequest="150"
                HeightRequest="150">

                <VerticalStackLayout Margin="16" HorizontalOptions="Center" VerticalOptions="Center">
                    <ActivityIndicator  IsRunning="True" IsEnabled="True" IsVisible="True" Color="{StaticResource ButtonDarkBlue}" HorizontalOptions="Center" VerticalOptions="Center"/>
                    <Label Text="{x:Static res:AppResources.IndicatorLoading}" FontSize="Medium" TextColor="Black"/>
                </VerticalStackLayout>


                
            </Border>

            <Grid.Triggers>
                <DataTrigger TargetType="Grid"
Binding="{Binding IsNotBusy}"   
Value="False">
                    <Setter Property="IsVisible"
Value="True" />

                </DataTrigger>
                <DataTrigger TargetType="Grid"
Binding="{Binding IsNotBusy}"   
Value="True">
                    <Setter Property="IsVisible"
Value="False" />

                </DataTrigger>
            </Grid.Triggers>
        </Grid>
        
    </Grid>
         
</ContentPage>